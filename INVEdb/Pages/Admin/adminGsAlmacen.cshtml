@page
@model INVEdb.Pages.Admin.adminGsAlmacenModel
@{
    ViewData["Title"] = "Gestión de Almacén - InveDB";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            background-color: #2c3e50;
            height: 100vh;
            color: white;
            position: fixed;
            width: 220px;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #1abc9c;
                }

        .content {
            margin-left: 240px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">InveDB Admin</h4>
        <a asp-page="/Admin/adminInicio">Inicio</a>
        <a asp-page="/Admin/adminAcceso">Accesos</a>
        <a asp-page="/Admin/adminGsProductos">Productos</a>
        <a asp-page="/Admin/adminGsAlmacen" class="active">Almacén</a>
        <a asp-page="/Admin/adminInventario">Inventario</a>
    </div>

    <div class="content">
        <h3>Gestor de Almacén</h3>
        <button class="btn btn-success mb-3">+ Nuevo Movimiento</button>
        <table class="table table-bordered bg-white">
            <thead class="table-warning">
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Tipo</th>
                    <th>Cantidad</th>
                    <th>Fecha</th>
                    <th>Responsable</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>1</td><td>Pizza Pepperoni</td><td>Entrada</td><td>20</td><td>10/10/2025</td><td>Admin</td></tr>
                <tr><td>2</td><td>Refresco</td><td>Salida</td><td>10</td><td>12/10/2025</td><td>Empleado</td></tr>
            </tbody>
        </table>
    </div>
</body>
</html>
