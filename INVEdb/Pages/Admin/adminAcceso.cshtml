@page
@model INVEdb.Pages.Admin.adminAccesoModel
@{
    ViewData["Title"] = "Gestión de Accesos - InveDB";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            background-color: #2c3e50;
            height: 100vh;
            color: white;
            position: fixed;
            width: 220px;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #1abc9c;
                }

        .content {
            margin-left: 240px;
            padding: 20px;
        }

        table {
            background: white;
            border-radius: 5px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">InveDB Admin</h4>
        <a asp-page="/Admin/adminInicio">Inicio</a>
        <a asp-page="/Admin/adminAcceso" class="active">Accesos</a>
        <a asp-page="/Admin/adminGsProductos">Productos</a>
        <a asp-page="/Admin/adminGsAlmacen">Almacén</a>
        <a asp-page="/Admin/adminInventario">Inventario</a>
    </div>

    <div class="content">
        <h3>Gestión de Accesos</h3>
        <table class="table table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th>Último acceso</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>1</td><td>Admin</td><td>Administrador</td><td>16/10/2025</td><td>Activo</td></tr>
                <tr><td>2</td><td>Empleado</td><td>Usuario</td><td>15/10/2025</td><td>Activo</td></tr>
            </tbody>
        </table>
    </div>
</body>
</html>
