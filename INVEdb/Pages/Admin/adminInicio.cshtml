@page
@model INVEdb.Pages.Admin.adminInicioModel
@{
    ViewData["Title"] = "Inicio - InveDB";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            background-color: #2c3e50;
            height: 100vh;
            color: white;
            position: fixed;
            width: 220px;
            padding-top: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #1abc9c;
                }

        .content {
            margin-left: 240px;
            padding: 20px;
        }

        .card {
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center">InveDB Admin</h4>
        <a asp-page="/Admin/adminInicio" class="active">Inicio</a>
        <a asp-page="/Admin/adminAcceso">Accesos</a>
        <a asp-page="/Admin/adminGsProductos">Productos</a>
        <a asp-page="/Admin/adminGsAlmacen">Almacén</a>
        <a asp-page="/Admin/adminInventario">Inventario</a>
    </div>

    <div class="content">
        <h3 class="mb-4">Panel de Inicio</h3>
        <div class="row">
            <div class="col-md-3"><div class="card bg-success text-white"><h2>5</h2><p>Usuarios</p></div></div>
            <div class="col-md-3"><div class="card bg-primary text-white"><h2>12</h2><p>Productos</p></div></div>
            <div class="col-md-3"><div class="card bg-warning text-white"><h2>7</h2><p>Movimientos</p></div></div>
            <div class="col-md-3"><div class="card bg-danger text-white"><h2>2</h2><p>Bajas</p></div></div>
        </div>
    </div>
</body>
</html>
